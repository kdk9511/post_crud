<h1>게시판 글쓰기</h1>

<form action="/board/update/<%= @post.id %>" method="POST">
  <div class="form-group">
    <label for="exampleFormControlTextarea1">title</label>
    <div class="col-sm-10">
        <input class="form-control form-control-lg" name="title" type="text" value = "<%= @post.title %>">
    </div>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">editor</label>
    <div class="col-sm-10">    
        <input class="form-control form-control-lg" name="editor" type="text" value = "<%= @post.editor %>">
    </div>  
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">content</label>
    <div class="col-sm-10">    
        <input class="form-control form-control-lg" name="content" type="text" value = "<%= @post.content %>">
    </div>  
    <button type="submit" class="btn btn-primary">submit</button>
    
  </div>
</form>